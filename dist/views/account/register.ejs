<h1 style="margin:0 25% 0 25%;"><a href="/">Система мониторинга здоровья пациента</a></h1>

<div>
    <ul>
      <li><a href="/logIN">Войти</a></li>
      <li><a href="/register">Зарегистрироваться</a></li>
    </ul>

    <div>
      <!-- Здесь регистрация для ГлавВРАЧА и ОБЫЧНОГО -->

      <form action="/registration" method="post">
        <div>
          <label for="username">
          </label>
          <input type="text" id="username" name="username" required autocomplete="off" placeholder="Name" />
        </div>

        <div>
          <label for="email">
          </label>
          <input type="email" id="email" name="email" required autocomplete="off" placeholder="e-mail" />
        </div>

        <div>
          <label for="serialNumber">
          </label>
          <input type="text" id="serialNumber" name="serialNumber" required autocomplete="off" placeholder="Серийный номер устройтсва" />
        </div>

        <div>
          <label for="password">
          </label>
          <input type="password" id="password" name="password" required autocomplete="off" placeholder="Password" />
        </div>

        <button type="submit" value="Войти">Зарегистрироваться</button>
      </form>
      
    </div>
</div>

